<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="130dp"
    android:layout_marginBottom="5dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgDelivery"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_gravity="start"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_food1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDeliveryName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Salmon Pasta with a Creamy Garlic Sauce"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDeliveryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="S$1800.00"
            android:textColor="#A80014"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:textStyle="italic"
            android:id="@+id/tvDeliveryDetail"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="Barbecure &amp; bar"
            android:textColor="#4a4a4a"
            android:textSize="12dp" />

    </LinearLayout>
    <Button
        android:id="@+id/btAddDelivery"
        android:textSize="16dp"
        android:text="+"
        android:textColor="#ffffff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="0dp"
        android:layout_marginTop="43dp"
        android:background="#A80014" />
</LinearLayout>