<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".fragment.PromotionFragment">

    <FrameLayout
        android:id="@+id/foregroundContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF2F3">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPmtion"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/ic_prtion"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:text="03 Oct 2018"
                android:id="@+id/txtPmtion"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/imgPmtion"
                android:textSize="12dp"
               ></TextView>


            <TextView
                android:id="@+id/txtPmtion2"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@id/txtPmtion"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/imgPmtion"
                android:textColor="#A1A1A1"
                android:textSize="12dp">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#000000"></LinearLayout>


        </RelativeLayout>
    </FrameLayout>


</LinearLayout>