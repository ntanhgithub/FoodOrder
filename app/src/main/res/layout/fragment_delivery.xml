<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_title" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="343dp"
                    android:background="#A80014" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/ic_back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <ImageView
                    android:id="@+id/imgDeliveryId"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_back"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:id="@+id/tvtitleDeliveryId"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:text="aASEGAEG"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="200dp"
                    android:layout_height="70dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="DELIVERY"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Eat more and still saving money. Order our best combo!"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"></androidx.recyclerview.widget.RecyclerView>




            </LinearLayout>
        </FrameLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_delivery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTintMode="screen" />

</FrameLayout>
