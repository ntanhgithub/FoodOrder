<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="345dp"
    android:layout_margin="10dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imgProCategory"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

    </ImageView>

    <TextView
        android:id="@+id/tvProName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:text="Applebeeâ€™s 2 combo w. salad"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvProCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:text="S$1800.00"
        android:textColor="#a80014"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="100dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_pro1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                 />

            <TextView
                android:id="@+id/tvDiscount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#2196F3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/icon_pro2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/tvDiscount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#2196F3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_pro3"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                 />

            <TextView
                android:id="@+id/tvDiscount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#2196F3" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvProCusines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barbecure &amp; bar"
            android:textColor="#000000"
            android:textSize="14dp">

        </TextView>

        <TextView
            android:textStyle="italic"
            android:id="@+id/tvProAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Girlls Sai Gon"
            android:textColor="#4a4a4a"
            android:textSize="12dp">

        </TextView>


    </LinearLayout>

</LinearLayout>