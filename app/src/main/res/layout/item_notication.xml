<?xml version="1.0" encoding="utf-8"?>

<app:io.sulek.ssml.SimpleSwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dynamicMenuWidth="false"
    app:menuSide="Right">

        <LinearLayout
            android:id="@+id/backgroundContainer"
            android:background="@android:color/holo_red_light"
            android:layout_width="74dp"
            android:orientation="vertical"
            android:layout_height="0dp">


               <ImageView
                   android:layout_marginTop="15dp"
                   android:layout_width="14dp"
                   android:layout_height="18dp"
                   android:src="@drawable/icon_delete"
                   android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Delete">
                </TextView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/foregroundContainer"
            android:layout_width="match_parent"
            android:layout_height="70dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF2F3">

                        <ImageView
                            android:id="@+id/imgbadge"
                            android:layout_marginLeft="25dp"
                            android:layout_marginBottom="18dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/icon_badge"
                            android:layout_width="36dp"
                            android:layout_height="36dp">
                        </ImageView>

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/txtOder12"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15.8dp"
                            android:textSize="12dp"
                            android:layout_toRightOf="@id/imgbadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>



                        <TextView
                            android:id="@+id/txtconfirming"
                            android:textSize="12dp"
                            android:textColor="#A1A1A1"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@id/imgbadge"
                            android:layout_below="@id/txtOder12"
                            android:text="03 Oct 2018"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#000000"></LinearLayout>






                </RelativeLayout>
        </FrameLayout>

</app:io.sulek.ssml.SimpleSwipeMenuLayout>


